	branch_id = dijit.byId('branch_id').get('value');
	dojo.xhrPost({
		url:url_CheckTitle,	
		content:{ 
			'branch_id': branch_id , 'land_address': title
		},
		handleAs:"json",
		load: function(data) {	
			if(data !== false ){
