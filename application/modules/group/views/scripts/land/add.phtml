}
url_addbranch = '<?php echo $this->url(array('module'=>'group','controller'=>'project','action'=>'addbranchajax'));?>';
function addNewBranch(){
	if(dijit.byId('add_branch').validate()) {
		dojo.xhrPost({
			url:url_addbranch,	
			form:dojo.byId('add_branch'),
			handleAs:"json",
			load: function(data) {
				var Itemmake = {					
						id: data,
					    name: dijit.byId('branch_namekh').get('value')
				};		
				addDataToSelectbox(dijit.byId('branch_id'), branch_store, Itemmake, data);	
				dijit.byId('add_branch').reset();
				dijit.byId('popup_project').hide();
			},
			error: function(response, ioArgs) {
			}
		});
	}
}

url_property = '<?php echo $this->url(array('module'=>'group','controller'=>'propertiestype','action'=>'add-propertytype'));?>';
function addNewPropertytype(){
	if(dijit.byId('frm_propertytype').validate()) {
		dojo.xhrPost({
			url:url_property,	
			form:dojo.byId('form_propertytype'),
			handleAs:"json",
			load: function(data) {
				var Itemmake = {					
						id: data,
